{
    "env": {
        "node": true,
        "es6": true,
        "mocha" : true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "no-constant-condition": ["error", { "checkLoops": false }],
        "no-console" : 0
    },
    "plugins": [
        "babel"
    ]
}